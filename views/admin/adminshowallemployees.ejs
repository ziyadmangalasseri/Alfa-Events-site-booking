<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show All Employees</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Your custom styles if any -->
    <link rel="stylesheet" href="/css/admin/adminshowallemployees.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Show All Employees</h2>
        <ul class="list-group">
            <!-- Loop through employees array -->
            <% employees.forEach(employee => { %>
                <li class="list-group-item bg-transparent border-0">
                    <div class="row align-items-center">
                        <!-- Display Employee ID and Name -->
                        <div class="col-12 col-md-8 d-flex align-items-center mb-2 mb-md-0">
                            <span class="number mr-3"><%= employee.EmployeeId %>.</span>
                            <input type="text" class="form-control" value="<%= employee.EmployeeName %>" readonly>
                        </div>
                        <div class="col-12 col-md-4 d-flex justify-content-center justify-content-md-end">
                            <button class="btn btn-primary mr-2">Edit</button>
                            <button class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                </li>
            <% }); %>
        </ul>
    </div>
</body>
</html>
