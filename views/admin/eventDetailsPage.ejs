<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Alfa Events Login</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Oswald:wght@200;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/admin/eventDetailsPage.css" />
  </head>
  <body>
    <div
      class="container d-flex align-items-center justify-content-center min-vh-100"
    >
      <div class="content-box">
        <div class="card-header text-center mb-3">
          <h2 class="text-center mb-4">Event Details</h2>
        </div>
        <div class="details-div">
          <% if (event){ %>
          <ul class="list-unstyled">
            <li class="info-item">
              <span class="label">Place </span>
              <span class="value text-white">: <%= event.place %></span>
            </li>
            <li class="info-item">
              <span class="label">Date </span>
              <span class="value text-white">: <%= event.formattedDate %></span>
            </li>
            <li class="info-item">
              <span class="label">Reportin Time </span>
              <span class="value text-white">: <%= event.reportingTime %></span>
            </li>
            <li class="info-item">
              <span class="label">Exit Time</span>
              <span class="value text-white">: <%= event.exitTime %></span>
            </li>
            <li class="info-item">
              <span class="label">Job Titile</span>
              <span class="value text-white">: <%= event.jobTitle %></span>
            </li>
            <li class="info-item">
              <span class="label">Job Description</span>
              <span class="value text-white"
                >: <%= event.jobDescription %></span
              >
            </li>
            <li class="info-item">
              <span class="label">Employer Limit</span>
              <span class="value text-white">: <%= event.employerLimit %></span>
            </li>
            <li class="info-item">
              <span class="label">Expiration Time</span>
              <span class="value text-white"
                >: <%= event.formattedexpirationTime %></span
              >
            </li>
          </ul>
        </div>
        <div class="footer">
          <button><a href="/event/edit/<%= event._id %>" class="text-decoration-none">Edit</a></button>
          <form id="eventdel">
            <button type="button" class="btn btn-light" id="eventdelbtn" style="width: 100%;" data-id="<%= event._id %>">Delete</button>
          </form>
         
        </div>
        <% } else { %>
          <p>No events available.</p>
          <% } %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
      document.getElementById('eventdelbtn').addEventListener('click',async function(event){
        event.preventDefault();
        const eventId=this.getAttribute('data-id');
        try {
          const response=await fetch(`/event/delete/${eventId}`,{
            method:'POST',
            headers:{
              'Content-Type':'application/json'
            },
            body:JSON.stringify({id:eventId})
          })
          const result=await response.json();
          if(result.success){
            Swal.fire({
                icon: "success",
                title: "Event Deleted Successfully",
                text: result.message || "Event has been successfully deleted",
                confirmButtonText: "OK",
              }).then(() => {
                if (result.redirectUrl) {
                  window.location.href = result.redirectUrl;
                }
              });
          }else{
            Swal.fire({
                icon: "error",
                title: "Event deletion Failed",
                text:
                  result.message ||
                  "Something went wrong while deletion the event",
                confirmButtonText: "OK",
              });
          }
        } catch (error) {
          console.error("An error occurred while editing the event:",
              error.message);
              Swal.fire({
              icon: "error",
              title: "Error",
              text: "An error occurred while deleting the event",
              confirmButtonText: "OK",
            });
        }
      })

    </script>
  </body>
</html>

