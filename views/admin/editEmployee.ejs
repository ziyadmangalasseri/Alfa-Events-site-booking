<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Employee</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin/editEmployee.css">
</head>
<body style="background-image: url('background.jpg'); background-size: cover; background-position: center;">
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="form-container p-5 rounded-4 shadow-lg">
            <h3 class="text-center mb-4 text-white">Edit Employee</h3>
            <!-- Form to edit employee details -->
            <form id="employeeForm" action="/editEmployee/<%= employee.EmployeeId %>" method="post">
                <div class="mb-3">
                    <label class="form-label text-white">Employee Name</label>
                    <input type="text" class="form-control input-dark" name="EmployeeName" value="<%= employee.EmployeeName %>">
                </div>
                <div class="mb-3">
                    <label class="form-label text-white">Employee Place</label>
                    <input type="text" class="form-control input-dark" name="Place" value="<%= employee.Place %>">
                </div>
                <div class="mb-3">
                    <label class="form-label text-white">Date of Birth</label>
                    <input type="date" class="form-control input-dark" name="DateOfBirth" value="<%= employee.DateOfBirth.toISOString().slice(0, 10) %>">
                </div>
                <div class="mb-3">
                    <label class="form-label text-white">Joined Date</label>
                    <input type="date" class="form-control input-dark" name="JoinedDate" value="<%= employee.JoinedDate.toISOString().slice(0, 10) %>">
                </div>
                <div class="mb-3">
                    <label class="form-label text-white">Blood Group</label>
                    <input type="text" class="form-control input-dark" name="BloodGroup" value="<%= employee.BloodGroup %>">
                </div>
                <div class="mb-3">
                    <label class="form-label text-white">Employee ID</label>
                    <input type="text" class="form-control input-dark" name="EmployeeId" value="<%= employee.EmployeeId %>">
                </div>
                <button type="submit" class="btn btn-dark w-100 mt-3">Save Changes</button>
            </form>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
